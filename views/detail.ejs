<!DOCTYPE html>
<html lang="es">
	<%- include('partials/head') %>  
	<body>
		<%- include partials/header.ejs %>
		<!-- product detail -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Detalle del producto: <%= product.name %></h2>
				</div>
			</div>
			<div class="product-detail">
				<div class="row">
					<div class="col-12 col-lg-8">
						<img src="/images/uploadedForProduct/<%= product.name %>.jpg" alt="Foto del producto" class="product-detail-img">
						<p class="product-detail-description">
							<%= product.description %>
						</p>
					</div>
					<div class="col-12 col-lg-4">
						<article class="product-detail-info">
							<h2 class="product-detail-title"><%= product.name %></h2>
							<%
								if(product.discount > 0) { 
									const discount = product.discountPercentage / 100;
									const finalPrice = (product.price * (1 - discount)).toFixed(0);
							%>
								<p class="product-detail-price small">
									<span>$<%= product.price %></span>
									/
								</p>
								<p class="product-detail-price">
									$<%= finalPrice %>
								</p>
							<% } else { %>
								<p class="product-detail-price">
									$<%= product.price %>
								</p>
							<% } %>
							<ul class="actions-list">
								<li>
									<i class="fas fa-credit-card"></i>
									<p>Pag√° en 12 cuotas sin interes</p>
								</li>
								<li>
									<i class="fas fa-store"></i>
									<p>Retiro gratis en locales del vendedor</p>
								</li>
							</ul>
							<a href="/users/addToCart" class="buy-now-button">COMPRAR AHORA</a>
							<hr>
							<a href="/products/<%= product.id %>/edit" class="action-button edit">EDITAR PRODUCTO</a>
							<a href="/products/<%= product.id %>/remove" class="action-button edit">ELIMINAR</a>
						</article>
					</div>
				</div>
			</div>
		</div>
		<%- include partials/footer.ejs %>
	</body>
</html>