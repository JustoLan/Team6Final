<!DOCTYPE html>
<html lang="es">
	<%- include('partials/head') %>  
	<body>
		<%- include partials/header.ejs %>
		<div class="container products-wrapper">
			<div class="container products-wrapper1 ">
				<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
						<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
						<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
					</ol>
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img class="d-block w-100" src="/images/products/banner3.jpg" alt="imagen de producto">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="/images/products/banner1.jpg" alt="imagen de producto">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="/images/products/banner2.jpg" alt="imagen de producto">
						</div>
					</div>
					<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
			<div class="container products-wrapper">
				<div class="col-12">
					<h2 class="products-title"></h2>
				</div>
				<%
					for (let i = 0; i < womenProducts.length; i += 1) { 
						const product = womenProducts[i];
				%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
								<figure class="product-box_image">
									<img src="/images/products/<%= product.image %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<a href="/products/<%= product.id %>"</a>
									<h2><%= product.price %></h2>
									<span><%= product.category %></span>
									<p><%= product.name %></p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			</div>
		</div>
		<!-- /ultima visita -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title"></h2>
				</div>
				<%
					for (let i = 0; i < menProducts.length; i += 1) {
						const product = menProducts[i];
				%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
								<figure class="product-box_image">
									<img src="/images/products/<%= product.image %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<a href="/products/<%= product.id %>"></a>
									<h2><%= product.price %></h2>
									<span><%= product.category %></span>
									<p><%= product.name %></p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			</div>
		</div>
		<%- include partials/footer.ejs %>
	</body>	
</html>