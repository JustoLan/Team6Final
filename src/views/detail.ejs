<!DOCTYPE html>
<html lang="es">
	<%- include('partials/head') %>  
	<body>
		
		<%- include partials/header.ejs%>

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle del producto: <%= ropas.name %></h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/products/<%= ropas.image %>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= ropas.description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= ropas.name %></h2>
						<% if(ropas.discount > 0) { 
							let getDiscountPercentage = discount => (100 - discount) / 100;
							let finalPrice = (ropas.price * getDiscountPercentage(ropas.discount)).toFixed(0);
						%>
							<p class="product-detail-price small">
								<span>$<%= thousandGenerator(ropas.price) %></span>
								/
							
							</p>
							<p class="product-detail-price">
								$<%= thousandGenerator(finalPrice) %>
							</p>
						<% } else { %>
							<p class="product-detail-price">
								$<%= thousandGenerator(ropas.price) %>
							</p>
						<% } %>

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="#" class="buy-now-button">COMPRAR AHORA</a>
						<hr>

						<a href="/products/edit/<%= ropas.id %>" class="action-button edit">EDITAR PRODUCTO</a>
						<form action="/products/delete/<%= ropas.id %>?_method=DELETE" method="POST" style="display: inline-flex">
							<button type="submit" class="action-button delete">ELIMINAR</button>
						</form>
					</article>
				</div>
			</div>
		</div>
	</div>
	<%- include partials/footer.ejs%>
	<%- include('partials/jquery') %>  

</body>	
</html>