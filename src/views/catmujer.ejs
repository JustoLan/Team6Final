<!DOCTYPE html>
<html lang="es">
	<%- include('partials/head') %>  
	<body>
		
		<%- include partials/header.ejs%>
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mujeres</h2>
				</div>
				<% for (let i=0; i < ropasm.length; i++) { %>
				
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= ropasm[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= ropasm[i].image %>" alt="imagen de producto">
							</figure>
						<article class="product-box_data">
							<h2>$<%= ropasm[i].price  %></h2>
							<span><%= ropasm[i].category %></span>
							<p><%= ropasm.name %></p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
			</div>
		</div>
	<%- include partials/footer.ejs%>
	<!-- /footer -->
	<%- include('partials/jquery') %>  
</body>	
</html>