<!DOCTYPE html>
<html lang="es">
	<%- include('partials/head') %>  
	<body>
		
		<%- include partials/header.ejs%>
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Hombres</h2>
				</div>
				<% for (let i=0; i < ropash.length; i++) {%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/detail/<%= ropash[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= ropash[i].image %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>$<%= ropash[i].price  %></h2>
									<span><%= ropash[i].category %></span>
									<p><%= ropash[i].name %></p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			</div>
		</div>

	<%- include partials/footer.ejs%>
	<!-- /footer -->
	<%- include('partials/jquery') %>  
</body>	
</html>