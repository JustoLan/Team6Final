<!DOCTYPE html>
<html lang="es">
	<head>
		<%- include('partials/head') %>  
	<body>
		<%- include('partials/header') %>  
	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de la búsqueda: <%= word %></h2>
			</div>
			<% if (word == ropas.name) {
				for (i=0; i < ropas.name; i++) { 

		%>
					<div class="col-12 col-sm-6 col-lg-3">	
						<section class="product-box">
							<a href="/products/detail/<%= `${ropas[i].id}` %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= ropas[i].image %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>$<%= thousandGenerator(finalPrice) %></h2>
									<span><%= ropas[i].discount %>% OFF</span>
									<p><%= ropas[i].name %></p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
		<% 
				}
			} else {	 
		%>
				<div class="col-12">
					<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
				</div>
		<%
			}
		%>
		</div>
	</div>
	<%- include partials/footer.ejs%>
	<!-- /footer -->
	<%- include('partials/jquery') %>  
</body>	
</html>