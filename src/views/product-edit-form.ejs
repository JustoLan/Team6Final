<!DOCTYPE html>
<html lang="es">
	<%- include('partials/head') %>  
	<body>
		<%- include partials/header.ejs%>
	<div class="product-box">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= ropas.name %></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%= ropas.id %>" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input" value="<%= ropas.name %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= ropas.price %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input" value="<%= ropas.discount %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<option 
								value="HOMBRE" 
								<%= ropas.category == 'HOMBRE' ? 'selected' : null %>
							>
								HOMBRE
							</option>
							<option 
								value="MUJER" 
								<%= ropas.category == 'MUJER' ? 'selected' : null %>
							>
								MUJER 
							</option>
							<div class="col-12">
								<form action="">
								  <label for="image">Seleccione una imagen:</label>
								  <input type="file" id="image" name="image" accept="image/*" value="ropas.image">
								</form>
							  </div>
		
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= ropas.description %></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<%- include partials/footer.ejs%>
	<!-- /footer -->
	<%- include('partials/jquery') %>  
</body>	
</html>